<div class="modal fade" id="new-answer-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Answer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span> 
                </button>
            </div>
            <%= form_for :answer, url: '/answers', html: { class: 'form_horizontal' } do %>
                <input type="hidden" name="answer[question_id]" value="<%= @question.id %>" />
                <div class="modal-body">
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" name="answer[email]" value="<%= current_email_user %>" class="form-control" id="inputEmail3" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputAnswer3" class="col-sm-2 col-form-label">Answer</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="answer[body]" id="inputAnswer3" placeholder="What is your answer?" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>