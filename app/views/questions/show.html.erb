<div class="container">
    <div class="lead card">
        <div class="media">
            <img src="<%= @question.gravatar %>"  class="mr-3" alt="...">
            <div class="media-body">
                <h5 class="mt-0"><%= @question.email %> asked:</h5>
                <%= @question.body %>
            </div>
        </div>
    </div>
    <div>
        <div>
            <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new-answer-modal">Submit new answer</button>
        </div>
        <%= render 'home/new_answer_form' %>
        <% @answers.each do |answer| %>
            <div class="media">
                <img src="<%=  answer.gravatar %>" class="mr-3" alt="...">
                <div class="media-body">
                    <h5 class="mt-0"><%= answer.email %> answered:</h5>
                    <div>
                        <%= time_ago_in_words answer.created_at %> ago
                    </div>
                    <%= answer.body %>
                </div>
            </div>   
        <% end %>    
    </div>  
</div>